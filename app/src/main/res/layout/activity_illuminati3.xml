<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#64b5f6"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".illuminati3">


    <EditText
        android:id="@+id/EdtName_3"
        android:textColor="#000"
        android:textColorHint="#000"
        android:hint="please enter your name"
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/EdtFamily_3"
        android:textColor="#000"
        android:textColorHint="#000"
        android:hint="please enter your family"
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/EdtAge_3"
        android:maxLength="2"
        android:textColor="#000"
        android:textColorHint="#000"
        android:hint="please enter your age"
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <EditText
        android:id="@+id/EdtPhone_3"
        android:textColor="#000"
        android:layout_marginTop="17dp"
        android:textColorHint="#000"
        android:maxLength="11"
        android:inputType="phone"
        android:hint="please enter your phone number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <EditText
        android:id="@+id/EdtAddress_3"
        android:textColor="#000"
        android:textColorHint="#000"
        android:hint="please enter your address"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/BtnReview_3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="review" />

    <TextView
        android:text="txthello"
        android:id="@+id/savedata"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="43dp"
        android:textColor="#000" />

</LinearLayout>